<h2>Taco Rating</h2>
<h3>
<%= rating %>
</h3>
<%# Pass the rating value to the Stimulus controller via a data attribute %>
<%# Optional: Add a class for styling/sizing the container %>


<div
 
>

  <svg id="taco-svg" viewBox="0 0 400 200" preserveAspectRatio="xMidYMid meet">
    <defs>
      <%# Define any gradients or patterns here if needed %>
    </defs>

    <%# Left Taco Half %>
    <path id="taco-left"
          <%# Placeholder: Replace with your actual SVG path data %>
          d="M 50,100 Q 100,20 150,100 Q 100,180 50,100 Z" 
          fill="#D2B48C" stroke="#8B4513" stroke-width="2"/>

    <%# Right Taco Half %>
    <path id="taco-right"
          <%# Placeholder: Replace with your actual SVG path data %>
          d="M 250,100 Q 300,20 350,100 Q 300,180 250,100 Z" 
          fill="#D2B48C" stroke="#8B4513" stroke-width="2"/>

    <%# Cheddar Cheese (as a path for stretchability) %>
    <path id="cheese"

        <%# Placeholder: Replace with your actual SVG path data. This will be the key to stretch. %>
        d="M 150,100 C 170,90 230,90 250,100 C 230,110 170,110 150,100 Z" 
        fill="#FFC107" stroke="#FFA000" stroke-width="1"/>

    <%# Add other details like beans, etc. if needed %>
    <%# Example: A bean on the left taco %>
    <circle cx="100" cy="110" r="8" fill="#5F3A1D" /> 
    <%# Example: A bean on the right taco %>
    <circle cx="300" cy="110" r="8" fill="#5F3A1D" /> 

  </svg>
</div>

